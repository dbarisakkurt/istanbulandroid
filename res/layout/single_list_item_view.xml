<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewReport"
            android:layout_width="400dip"
            android:layout_height="400dip"
            android:layout_gravity="center"
            android:contentDescription="@string/image"
            android:src="@drawable/noimage" />

        <TextView
            android:id="@+id/textViewCatStatic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textViewDescStatic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textViewCatLat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/latitude"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textViewCatLong"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/longitude"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textViewCatReportDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addition_date"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reportDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

</ScrollView>